<?xml version="1.0"?>
<robot name="cup_with_handle">
    <link name="base_link">
        <!-- 杯身（圆柱体） -->
        <collision>
            <geometry>
                <cylinder length="0.15" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.075"/>
        </collision>

        <visual>
            <geometry>
                <cylinder length="0.15" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.075"/>
            <material name="red">
                <color rgba="0.8 0.2 0.2 1"/>
            </material>
        </visual>

        <!-- 杯把手（环状体，用多个小球模拟） -->
        <collision>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.06 0 0.1"/>
        </collision>

        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.06 0 0.1"/>
            <material name="red">
                <color rgba="0.8 0.2 0.2 1"/>
            </material>
        </visual>

        <!-- 物理属性 -->
        <inertial>
            <mass value="0.15"/>
            <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002"/>
        </inertial>
    </link>
</robot>
